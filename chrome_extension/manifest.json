{
    "manifest_version": 3,
    "name": "FakeReview-AI",
    "version": "1.1",
    "description": "Check for fake reviews on e-commerce websites.",
    "permissions": [
        "activeTab",
        "scripting",
        "contextMenus"
    ],
    "host_permissions": [
        "*://*/*",
        "http://localhost/*",
        "http://127.0.0.1/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    }
}